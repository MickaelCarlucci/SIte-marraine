<!-- modal -->
<div id="myModalPrice" class="modal">
    <div class="modal-content">
        <span class="close" id="close-price">&times;</span>
        <form id="formPrice" action="/updateArrayPrice/<%= arrays.id %>" method="post" data-id="<%= arrays.id %>">
            <textarea name="price" id="price" cols="100" rows="20" placeholder="<%= arrays.price %>"></textarea>
            <button type="submit">Modifier</button>
        </form>
    </div>
  </div>